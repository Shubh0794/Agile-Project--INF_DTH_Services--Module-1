CREATE TABLE USERS(
   ID int,
   userId VARCHAR (20)     NOT NULL,
   password  VARCHAR(20)   NOT NULL,
   type  int
);


CREATE SEQUENCE user_id_seq;


SELECT user_id_seq,LAST_NUMBER FROM SEQ WHERE LAST_NUMBER=(SELECT MAX(ID)+1 FROM USERS);
SELECT LAST_NUMBER
  FROM user_sequences WHERE SEQUENCE_NAME = 'user_id_seq'

SELECT user_id_seq.currval FROM dual;

CREATE TRIGGER users_ai
BEFORE INSERT ON Users
FOR EACH ROW
BEGIN
  SELECT user_id_seq.nextval
  INTO :new.ID
  FROM dual;
END;

INSERT INTO Users VALUES(0,'sdesai1','password',0);

SELECT * FROM USERS WHERE userId='sdesai1' and password='password'

SELECT * FROM Users
